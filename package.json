{
  "name": "MicroGUI",
  "version": "0.1.0",
  "private": true,
  "build": {
    "asar": false,
    "extends": null,
    "productName": "MicroGUI",
    "appId": "com.MicroGUI.MicroGUI-editor",
    "files": [
      {
        "from": ".",
        "to": ".",
        "filter": [
          "electron",
          "images",
          "node_modules",
          "main.js",
          "package.json"
        ]
      },
      {
        "from": "./app/build",
        "to": ".",
        "filter": ["**/*"]
      }
    ],
    "mac": {
      "artifactName": "${productName}-${version}-osx.${ext}",
      "category": "public.app-category.productivity",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "linux": {
      "artifactName": "${productName}-${version}-${arch}-linux.${ext}",
      "maintainer": "xxxx",
      "target": [
        "tar.gz",
        "deb",
        "rpm"
      ]
    },
    "win": {
      "target": [
        "zip",
        "dir"
      ]
    }
  },
  "dependencies": {
    "@craftjs/core": "^0.2.0-beta.8",
    "@craftjs/layers": "^0.2.0-beta.10",
    "@emotion/react": "^11.10.5",
    "@emotion/styled": "^11.10.5",
    "@mui/icons-material": "^5.11.0",
    "@mui/lab": "^5.0.0-alpha.117",
    "@mui/material": "^5.11.6",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.4.3",
    "file-saver": "^2.0.5",
    "react": "^18.2.0",
    "react-color": "^2.19.3",
    "react-contenteditable": "^3.3.6",
    "react-dnd": "^16.0.1",
    "react-dnd-html5-backend": "^16.0.1",
    "react-dom": "^18.2.0",
    "react-draggable": "^4.4.5",
    "react-resizable": "^3.0.4",
    "react-router-dom": "^6.7.0",
    "web-vitals": "^3.1.1"
  },
  "main": "public/electron.js",
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "dev": "concurrently -k \"BROWSER=none npm start\" \"npm:electron\"",
    "electron": "npx wait-on http://127.0.0.1:3000 && npx electron .",
    "make": "npx electron-builder --dir"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "concurrently": "^8.0.1",
    "electron": "^24.0.0",
    "electron-is-dev": "^2.0.0",
    "electron-builder": "^23.6.0",
    "react-scripts": "^5.0.1",
    "wait-on": "^7.0.1"
  }
}
